# Configuración de Producción - Centro de Estimulación Mamitas
# NO subir este archivo a repositorios públicos

# Base de datos MongoDB Atlas (Producción)
MONGODB_URI=mongodb+srv://usuario-produccion:contraseña-produccion@cluster-produccion.mongodb.net/centro_estimulacion_prod?retryWrites=true&w=majority

# Puerto del servidor
PORT=5000

# JWT Secret (generar uno único para producción)
JWT_SECRET=tu-jwt-secret-muy-seguro-para-produccion-2024

# Configuración AWS S3 (Producción)
AWS_ACCESS_KEY_ID=tu-access-key-produccion
AWS_SECRET_ACCESS_KEY=tu-secret-key-produccion
AWS_REGION=us-east-2
AWS_BUCKET_NAME=tu-bucket-produccion

# Configuración RIPS (Producción)
NIT_FACTURADOR=tu-nit-real
COD_PRESTADOR=tu-codigo-prestador-real

# Entorno
NODE_ENV=production

# Configuración de logs
LOG_LEVEL=info

# Configuración de CORS (dominios permitidos en producción)
CORS_ORIGIN=https://tu-dominio.com

# Configuración de rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Todos los días a las 2 AM

# Configuración de monitoreo
MONITORING_ENABLED=true
HEALTH_CHECK_ENABLED=true